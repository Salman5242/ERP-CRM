# Production Environment Variables for Vercel Deployment
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DATABASE=mongodb+srv://username:password@cluster.mongodb.net/database_name

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Server Configuration
PORT=3000
NODE_ENV=production

# File Upload Configuration
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760

# Email Configuration (if using Resend)
RESEND_API_KEY=your_resend_api_key_here

# OpenAI Configuration (if using AI features)
OPENAI_API_KEY=your_openai_api_key_here

# AWS S3 Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket_name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here
